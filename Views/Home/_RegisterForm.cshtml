@model User;

@{
    ViewData["Title"] = "Home Page";
}
<div class="card" style="width: 20rem;">
    <div class="card-body p-3">
        <form asp-action="CreateUser" class="d-flex flex-column gap-3">
            <h2>Register</h2>
            <div class="d-flex flex-column">
                <div class="form-floating d-flex justify-content-between gap-3">
                    <input class="form-control" placeholder="Username" asp-for="@Model.Username">
                    <label asp-for="@Model.Username"></label>
                </div>
                <span class="form-text text-warning text-end" asp-validation-for="Username"></span>
            </div>
            <div class="d-flex flex-column">
                <div class="form-floating d-flex justify-content-between gap-3">
                    <input class="form-control" placeholder="Email" asp-for="@Model.Email">
                    <label asp-for="@Model.Email"></label>
                </div>
                <span class="form-text text-warning text-end" asp-validation-for="Email"></span>
            </div>
            <div class="d-flex flex-column">
                <div class="form-floating d-flex justify-content-between gap-3">
                    <input class="form-control" placeholder="Password" asp-for="@Model.Password">
                    <label asp-for="@Model.Password"></label>
                </div>
                <span class="form-text text-warning text-end" asp-validation-for="Password"></span>
            </div>
            <div class="d-flex flex-column">
                <div class="form-floating d-flex justify-content-between gap-3">
                    <input class="form-control" placeholder="ConfirmPassword" asp-for="@Model.ConfirmPassword">
                    <label asp-for="@Model.ConfirmPassword"></label>
                </div>
                <span class="form-text text-warning text-end" asp-validation-for="ConfirmPassword"></span>
            </div>
            <button class="btn btn-primary" type="submit" style="background-color:var(--secondary-color); border-color:var(--secondary-color)">Register</button>
        </form>
    </div>
</div>



