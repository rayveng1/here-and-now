@model UserLogin;

@{
    ViewData["Title"] = "Home Page";
}

<div class="card h-50" style="width: 20rem;">
    <div class="card-body p-3">
        <form asp-action="Login" class="d-flex flex-column gap-3">
            <h2>Log In</h2>
            <div class="d-flex flex-column">
                <div class="d-flex justify-content-between gap-3 form-floating">
                    <input class="form-control" placeholder="Email" asp-for="@Model.Email">
                    <label asp-for="@Model.Email"></label>
                </div>
                <span class="form-text text-warning text-end" asp-validation-for="Email"></span>
    
            </div>
            <div class="d-flex flex-column">
                <div class="d-flex justify-content-between gap-3 form-floating">
                    <input class="form-control" placeholder="Password" asp-for="@Model.Password">
                    <label asp-for="@Model.Password"></label>
                </div>
                <span class="form-text text-warning text-end" asp-validation-for="Password"></span>
            </div>
            <button class="btn btn-secondary" type="submit" style="background-color:var(--secondary-color); border-color:var(--secondary-color)">Login</button>
        </form>
    </div>
</div>

